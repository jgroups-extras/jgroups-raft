<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="CommandLineConfig" packages="org.jgroups.raft.tests.listeners">
    <Properties>
        <Property name="jgroups.raft.log.path">target/functional</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d{HH:mm:ss,SSS} %-5p (%t) [%c{1.}] %m %throwable{10}%n"/>
        </Console>

        <Routing name="Routing">
            <Routes pattern="$${testName:none}">
                <!-- Default route, matches any test name -->
                <Route>
                    <File name="TestFile"
                          fileName="${sys:jgroups.raft.log.path}/${testName:none}/test.log">
                        <PatternLayout>
                            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} (%t:%x) %-5level %logger{36} - %m%n</Pattern>
                        </PatternLayout>
                    </File>
                </Route>
            </Routes>
        </Routing>

        <RandomAccessFile name="FailuresFile"
                          fileName="${sys:jgroups.raft.log.path}/test-failures.log"
                          append="true">
            <PatternLayout pattern="%d{HH:mm:ss,SSS} %-5p [%c{1.}] %m%n"/>
        </RandomAccessFile>
    </Appenders>

    <Loggers>
        <Logger name="org.jgroups" level="${sys:jgroups.log.level:-INFO}" />
        <Logger name="org.infinispan" level="WARN" />

        <Logger name="org.jgroups.raft.tests.listeners.TestSuiteProgress">
            <AppenderRef ref="FailuresFile" level="ERROR" />
        </Logger>

        <Root level="DEBUG">
            <AppenderRef ref="STDOUT" level="FATAL" />
            <AppenderRef ref="Routing" />
        </Root>
    </Loggers>
</Configuration>
